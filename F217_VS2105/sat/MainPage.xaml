<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:sat" x:Class="sat.MainPage"
    mc:Ignorable="d" Height="235" Width="385">

    <Grid x:Name="LayoutRoot" Background="White" Height="235" VerticalAlignment="Top" Margin="0,1,10,-1">

        <Rectangle HorizontalAlignment="Left" Height="53" Margin="4,153,0,0" Stroke="Black" VerticalAlignment="Top" Width="366"/>

        <Rectangle HorizontalAlignment="Left" Height="201" Margin="4,5,0,0" Stroke="Black" VerticalAlignment="Top" Width="366"/>

        <TextBox HorizontalAlignment="Left" Height="25" Margin="4,210,0,0" TextWrapping="Wrap" Text="www.elak.hr" VerticalAlignment="Top" Width="368" Background="{x:Null}" BorderBrush="{x:Null}" IsHitTestVisible="False" IsReadOnly="True" TextAlignment="Center"/>
        <Button x:Name="send" Content="Spremi novo vrijeme i datum" HorizontalAlignment="Left" Margin="15,164,0,0" VerticalAlignment="Top" Width="345" Height="30" RenderTransformOrigin="0.533,1.2" TabIndex="5" Click="send_Click"/>
        <TextBox x:Name="datum" HorizontalAlignment="Left" Height="25" Margin="188,10,0,0" TextWrapping="Wrap" Text="XX.XX.XXX." VerticalAlignment="Top" Width="166" Background="{x:Null}" BorderBrush="{x:Null}" IsHitTestVisible="False" IsReadOnly="True" TextAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" TextWrapping="Wrap" Text="Vrijeme :" VerticalAlignment="Top" Width="173" Background="{x:Null}" BorderBrush="{x:Null}" IsHitTestVisible="False" IsReadOnly="True" TextAlignment="Right"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="10,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" Background="{x:Null}" BorderBrush="{x:Null}" IsHitTestVisible="False" IsReadOnly="True" TextAlignment="Right" IsTabStop="False" Text="Novi datum :"/>
        <ComboBox x:Name="Day" HorizontalAlignment="Left" Margin="187,67,0,0" VerticalAlignment="Top" Width="45" Height="22" BorderBrush="Black" TabIndex="1" TabNavigation="Local"/>
        <ComboBox x:Name="Month" HorizontalAlignment="Left" Margin="240,67,0,0" VerticalAlignment="Top" Width="45" Height="22" BorderBrush="Black" TabIndex="2" TabNavigation="Local"/>
        <ComboBox x:Name="Year" HorizontalAlignment="Left" Margin="292,67,0,0" VerticalAlignment="Top" Width="62" Height="22" BorderBrush="Black" TabIndex="3" TabNavigation="Local"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="4" Margin="286,84,0,0" Stroke="Black" VerticalAlignment="Top" Width="4" RenderTransformOrigin="1.25,0.75"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="4" Margin="233,84,0,0" Stroke="Black" VerticalAlignment="Top" Width="4"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="4" Margin="356,84,0,0" Stroke="Black" VerticalAlignment="Top" Width="4" RenderTransformOrigin="1.25,0.75"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="4" Margin="273,135,0,0" Stroke="Black" VerticalAlignment="Top" Width="4"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="10,95,0,0" TextWrapping="Wrap" Text="Novo vrijeme :" VerticalAlignment="Top" Width="173" Background="{x:Null}" BorderBrush="{x:Null}" IsHitTestVisible="False" IsReadOnly="True" TextAlignment="Right" IsTabStop="False"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="4" Margin="273,128,0,0" Stroke="Black" VerticalAlignment="Top" Width="4"/>
        <Slider Height="26" HorizontalAlignment="Left" x:Name="slider1hour" VerticalAlignment="Top" Width="85" SmallChange="1" ValueChanged="slider1_ValueChanged" Maximum="23" Value="0" Margin="188,122,0,0" IsTabStop="False" TabIndex="10" TabNavigation="Cycle" />
        <Slider Height="26" HorizontalAlignment="Left" Margin="282,122,0,0" x:Name="slider2min" VerticalAlignment="Top" Width="79" SmallChange="1" Maximum="59" ValueChanged="slider2min_ValueChanged" IsTabStop="False" TabNavigation="Cycle" TabIndex="20" />
        <TextBox HorizontalAlignment="Left" x:Name="time" Width="174" Text="00:00" TextChanged="time_TextChanged" LostFocus="time_LostFocus" KeyDown="time_KeyDown" TextAlignment="Center" FontSize="12" TabIndex="4" Height="22" VerticalAlignment="Top" Margin="187,97,0,0" />

    </Grid>
</UserControl>
